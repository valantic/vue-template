{
  "name": "vue-template",
  "version": "7.0.0",
  "description": "A customized Vue.js project template",
  "scripts": {
    "clean:caches": "rm -rf .eslintcache .stylelintcache node_modules/.cache",
    "dev": "webpack-dev-server --mode development",
    "dev:s": "npm run styleguide",
    "jest": "jest tests --config jest.config.js --silent",
    "jest:debug": "node --inspect-brk node_modules/jest/bin/jest.js --runInBand tests/unit/specs/<path-to-your-test-file>.ts",
    "lint": "npm run lint:eslint && npm run lint:stylelint",
    "lint:stylelint": "stylelint 'src/**/*.?(vue|scss)'  --config .stylelintrc.js;",
    "lint:eslint": "eslint --ext .ts,.js,.vue src tests/unit/specs",
    "test": "npm run lint && npm run jest; exit 0;",
    "styleguide": "vue-styleguidist server",
    "build": "NODE_ENV=production webpack --mode production",
    "build:profile": "NODE_ENV=production webpack --mode production --profile",
    "build:styleguide": "webpack --styleguide-build && vue-styleguidist build",
    "build:watch": "NODE_ENV=production webpack --mode production --watch",
    "build:icons": "svg-sprite --config .svg-sprite.json src/assets/icons/*.svg",
    "lint-staged": "lint-staged",
    "prepare": "husky install"
  },
  "webpack": {
    "buildPath": "dist",
    "localDist": "webpack-dist",
    "productionPath": "/",
    "styleguideBuildPath": "./dist",
    "styleguidePath": "/",
    "developmentPath": "/",
    "outputAssetsFolder": "assets/",
    "filePrefix": "",
    "themeSource": "src/setup/scss/themes/",
    "themeFiles": [
      "theme-01",
      "theme-02"
    ],
    "devPort": 9090
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint"
    ],
    "*.{css,vue,scss}": [
      "stylelint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/valantic/vue-template.git"
  },
  "engines": {
    "node": ">=16 <17",
    "npm": ">=7.10"
  },
  "keywords": [
    "vue",
    "vuejs",
    "valantic"
  ],
  "author": "valantic CEC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/valantic/vue-template/issues"
  },
  "homepage": "https://github.com/valantic/vue-template",
  "dependencies": {
    "@vuelidate/core": "~2.0.0-alpha.25",
    "@vuelidate/validators": "~2.0.0-alpha.21",
    "axios": "~0.24.0",
    "core-js": "~3.19.1",
    "dayjs": "~1.10.7",
    "direct-vuex": "next",
    "reset-css": "~5.0.1",
    "swiper": "~7.3.0",
    "vue": "3.2.4",
    "vue-i18n": "~9.1.7",
    "vuex": "~4.0.2"
  },
  "devDependencies": {
    "@babel/core": "~7.16.0",
    "@babel/plugin-syntax-dynamic-import": "~7.8.3",
    "@babel/preset-env": "~7.16.4",
    "@types/faker": "~5.5.6",
    "@types/jest": "~27.0.1",
    "@types/node": "~16.11.9",
    "@types/resize-observer-browser": "~0.1.6",
    "@types/webpack-env": "~1.16.0",
    "@typescript-eslint/eslint-plugin": "~5.4.0",
    "@typescript-eslint/parser": "~5.4.0",
    "@vue/eslint-config-typescript": "~9.1.0",
    "@vue/test-utils": "~2.0.0-rc.15",
    "@vue/vue3-jest": "~27.0.0-alpha.3",
    "autoprefixer": "~10.4.0",
    "axios-mock-adapter": "~1.20.0",
    "babel-core": "~7.0.0-bridge.0",
    "babel-jest": "~27.3.1",
    "babel-loader": "~8.2.3",
    "babel-plugin-transform-require-context": "~0.1.1",
    "babel-preset-jest": "~27.4.0",
    "clean-webpack-plugin": "~4.0.0",
    "copy-webpack-plugin": "~10.0.0",
    "css-loader": "~6.5.1",
    "cssnano": "~5.0.11",
    "eslint": "~8.3.0",
    "eslint-config-airbnb-base": "~15.0.0",
    "eslint-config-valantic": "9.6.1",
    "eslint-import-resolver-webpack": "~0.13.2",
    "eslint-plugin-import": "~2.25.3",
    "eslint-plugin-vue": "~8.1.1",
    "faker": "~5.5.3",
    "fork-ts-checker-webpack-plugin": "~6.4.1",
    "html-webpack-plugin": "~5.5.0",
    "husky": "~7.0.4",
    "jest": "~27.3.1",
    "jest-transform-stub": "~2.0.0",
    "lint-staged": "~12.1.2",
    "mini-css-extract-plugin": "~2.4.5",
    "postcss-html": "~1.2.0",
    "postcss-loader": "~6.2.0",
    "postcss-scss": "~4.0.2",
    "react": "~17.0.2",
    "react-dom": "~17.0.2",
    "sass": "~1.43.4",
    "sass-loader": "~12.3.0",
    "stylelint": "~14.1.0",
    "stylelint-config-valantic": "6.5.1",
    "stylelint-webpack-plugin": "~3.1.0",
    "svg-sprite": "~1.5.3",
    "svg4everybody": "~2.1.9",
    "svgo-loader": "~3.0.0",
    "ts-jest": "~27.0.7",
    "ts-loader": "~9.2.6",
    "typescript": "~4.5.2",
    "vue-loader": "~16.5.0",
    "vue-markdown-loader": "~2.5.0",
    "vue-router": "~4.0.8",
    "vue-styleguidist": "~4.41.3",
    "webpack": "~5.64.2",
    "webpack-assets-manifest": "~5.0.6",
    "webpack-bundle-analyzer": "~4.5.0",
    "webpack-cli": "~4.9.1",
    "webpack-dev-server": "~4.5.0",
    "webpack-env": "~0.8.0"
  },
  "browserslist": [
    "> 2%",
    "last 2 years",
    "not ie > 0",
    "not ie_mob > 0",
    "not dead"
  ]
}
