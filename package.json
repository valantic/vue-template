{
  "name": "vue-template",
  "version": "3.0.0",
  "description": "A customized Vue.js project template",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && webpack --mode production --env.message",
    "build:monitor": "npm run build -- --env.monitor",
    "build:profile": "webpack --mode production --profile --json > stats/profile.json",
    "build:styleguide": "npm run build -- --env.styleguide && vue-styleguidist build",
    "build:watch": "npm run build -- --env.watch",
    "eslint": "eslint --cache --ext .js,.vue app tests/unit/specs; exit 0;",
    "eslint:fix": "eslint --ext .js,.vue app tests/unit/specs --fix; exit 0;",
    "stylelint": "stylelint --cache 'app/**/*.?(vue|scss)'; exit 0",
    "stylelint:fix": "echo \"Using stylelint --fix is not a good idea when using *.vue files...\"",
    "lint": "npm run eslint && npm run stylelint",
    "license": "license-checker --summary",
    "license:stats": "license-checker --csv --out stats/license.csv",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest tests --config jest.config.js",
    "dev": "webpack-dev-server --mode development",
    "dev:s": "npm run dev:styleguide",
    "dev:styleguide": "vue-styleguidist server",
    "postinstall": "echo \"\\x1b[44m Please update package.md after installing new packages and check build output for malicious code! \\x1b[0m\"",
    "postuninstall": "echo \"\\x1b[44m Please update package.md after uninstalling packages! \\x1b[0m\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/valantic/vue-template.git"
  },
  "engines": {
    "node": ">=10.0.0 <11.0.0",
    "npm": ">=5.7.1"
  },
  "keywords": [
    "vue",
    "vuejs",
    "valantic"
  ],
  "author": "valantic CEC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/valantic/vue-template/issues"
  },
  "homepage": "https://github.com/valantic/vue-template",
  "dependencies": {
    "@babel/polyfill": "~7.0.0",
    "@verstaerker/vue-bem": "~1.2.0",
    "axios": "~0.18.0",
    "css-vars-ponyfill": "~1.12.2",
    "lazysizes": "~4.1.5",
    "lodash": "~4.17.10",
    "material-design-icons-iconfont": "~4.0.3",
    "moment": "~2.22.2",
    "picturefill": "~3.0.3",
    "portal-vue": "~1.4.0",
    "smoothscroll-polyfill": "~0.4.3",
    "swiper": "~4.4.6",
    "vue": "~2.5.22",
    "vue-bem-cn": "~1.1.1",
    "vue-i18n": "~8.3.2",
    "vue-js-modal": "~1.3.28",
    "vue-router": "~3.0.2",
    "vue-tabs-component": "~1.5.0",
    "vuetify": "~1.3.16",
    "vuex": "~3.0.1"
  },
  "devDependencies": {
    "@babel/core": "~7.1.6",
    "@babel/plugin-syntax-dynamic-import": "~7.0.0",
    "@babel/plugin-syntax-object-rest-spread": "~7.0.0",
    "@babel/preset-env": "~7.1.6",
    "@vue/test-utils": "~1.0.0-beta.28",
    "axios-mock-adapter": "~1.15.0",
    "babel-core": "~7.0.0-bridge.0",
    "babel-eslint": "~10.0.1",
    "babel-jest": "~23.6.0",
    "babel-loader": "~8.0.5",
    "babel-plugin-dynamic-import-node": "~2.2.0",
    "babel-plugin-transform-imports": "~1.5.1",
    "copy-webpack-plugin": "~4.6.0",
    "css-loader": "~1.0.1",
    "eslint": "~5.12.1",
    "eslint-config-airbnb-base": "~13.1.0",
    "eslint-config-valantic": "~6.0.0",
    "eslint-import-resolver-webpack": "~0.11.0",
    "eslint-loader": "~2.1.1",
    "eslint-plugin-import": "~2.16.0",
    "eslint-plugin-vue": "~5.1.0",
    "faker": "~4.1.0",
    "file-loader": "~2.0.0",
    "friendly-errors-webpack-plugin": "~1.7.0",
    "html-webpack-plugin": "~3.2.0",
    "image-webpack-loader": "~4.5.0",
    "jest": "~23.6.0",
    "launch-editor-middleware": "~2.2.1",
    "license-checker": "~24.0.1",
