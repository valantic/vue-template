{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@!production/*": [
        "src/*"
      ]
    },
    "typeRoots": [
      "./src/types",
      "./node_modules/@types/"
    ],
    "lib": ["es2015", "es2016", "es2017", "es2018", "dom"],
    "types": [
      "node",
      "vite/client",
      "google.maps"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
